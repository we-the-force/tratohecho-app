/* iOS Cordova Tweak */
.device-cordova.device-ios {
  height: 100vh;
}

/* Custom color theme properties */
:root {
  --f7-theme-color: #FBCA3D;
  --f7-theme-color-rgb: 251, 202, 61;
  --f7-theme-color-shade: #fabf15;
  --f7-theme-color-tint: #fcd565;
}

/* Your app custom styles here */
#view-home
  .subnavbar
    background-color transparent
    backdrop-filter none
    width 90vw
    
    margin-left 5vw
    margin-right 5vw
    margin-top 2vw
    &:after
      display none
    .searchbar
      input
        background-color white
        border-radius 35px
        border 0.5px solid rgba(0,0,0,0.1)

.mainMenu
  width 90vw
  margin-left 5vw
  margin-right 5vw
  margin-bottom 3vw
  border-radius 15px
  &:before
    display none